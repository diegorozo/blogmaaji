@import url('https://fonts.googleapis.com/css?family=Roboto:300,500,700');

negro = #525252
rosado = #f8e9dc
rosado2 = #f6aaa1
textoico = #f2f0e0


body
	margin auto
	font-family 'Roboto', sans-serif
	font-size 16px
	
	
	
header
	background: url(../image/header.png) no-repeat
	background-position center top
	background-size cover
	width 100%
	height 262px
	margin 0 auto
	
	h1
		margin 20px auto 0 auto
		text-align center
		width 100%
		

		img
			width 30%
			margin auto

section
	.axblog
		border 2px solid rosado
		margin 10px 0
		padding 10px
		color negro
		font-weight 300
		display inline-block
		vertical-align top
		width 100%
		
#navbar
	width 90%
	
	li 
		border-right 1px solid negro
	
		a 
			text-transform uppercase
			font-size 12px
			color negro
			font-weight 500
		
	li:last-child
		border-right none
	
	li a:hover
		background rosado
		
	.active
		background rosado	
		

section
	.axblog
		width 100%
		
		.titulo
			font-size 16px
			text-align center
			color #e2a298
			font-weight 300
			
			img 
				width 50%
				margin auto
				padding 0
				
				
		ul
			padding 0
			margin 0
			text-align center
			
			li
				list-style none
				display inline-block
				font-size 16px
				width 40px
				background rosado2
				border-radius 50%
				height 40px
				text-align center
				padding 7px
				margin 5px
			
				.fa 
					color textoico
					padding 2px
					font-size 20px

		p
			font-weight 300
			margin-top 10px 
			font-size 14px
			
	
		.titulo2
			img 
				width 35%
				margin auto
				padding 0
			
		.titulo3
			h2
				img 
					width 10%
					margin auto
					padding 0

			
	.ax-sidebar
		p
			font-size 12px
			
		.media-left 
			background rosado2
			padding 19px 0
			border-radius 50%
			width 64px
			height 64px
			text-align center
			display inline-block
			vertical-align top
			
			a 
				font-weight 700
				color textoico
			
		.media-body
			vertical-align: top
			display: inline-block
			width: 200px
			
			h4
				font-size 14px

	

	.axarticle
		.titulo
			img 
				width 80%
		span
			p 
				color rosado2
				font-weight 500
				margin-top 10px 
		p
			font-weight 300
			margin-top 10px 
			font-size 14px
	
		
		blockquote p
			color rosado2
			font-weight 500
	
	
	
	